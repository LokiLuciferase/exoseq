/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------
 *  Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 */

process {
  cpus = { check_max( 1 * task.attempt, 'cpus' ) }
  memory = { check_max( 8.GB * task.attempt, 'memory' ) }
  time = { check_max( 2.h * task.attempt, 'time' ) }

  errorStrategy = { task.exitStatus in [143,137] ? 'retry' : 'finish' }
  maxRetries = 1
  maxErrors = '-1'

  // Process-specific resource requirements
  $fastqc {
    container = 'shub://qbicsoftware/qbic-singularity-fastqc'
    cpus = 1
    memory = 2.GB
    time = 3.h 
  }

  $trim_galore {
    container = 'shub://qbicsoftware/qbic-singularity-trimgalore'
    cpus = 2
    memory = 4.GB
    time = 6.h
  }

  $bwamem {
    container = 'shub://qbicsoftware/qbic-singularity-bwa'
    cpus = 28
    memory = 4.GB
    time = 16.h
  }

  $makeBWAIndex{
    container = 'shub://qbicsoftware/qbic-singularity-bwa'
    cpus = 2
    memory = 4.GB
    time = 8.h
  }

  $sortSam {
    container = 'shub://qbicsoftware/qbic-singularity-samtools'
    cpus = 28
    memory = 4.GB
    time = 4.h
  }

  $makeFastaIndex {
    container = 'shub://qbicsoftware/qbic-singularity-samtools'
    cpus = 1
    memory = 4.GB
    time = 1.h
  }

  $markDuplicates {
    container = 'shub://qbicsoftware/qbic-singularity-picard'
    cpus = 2
    memory = 32.GB
    time = 4.h
  }

  $recal_bam_files {
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 4
    memory = 16.GB
    time = 8.h
  }

  $realign {
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 2
    memory = 16.GB
    time = 8.h
  }

  $qualiMap {
    //container = 'shub://qbicsoftware/qbic-singularity-qualimap2'
    cpus = 16
    memory = 16.GB
    time = 5.h
  }

  $variantCall {
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 16
    memory = 32.GB
    time = 8.h
  }

  $genotypegvcfs{
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 28
    memory = 32.GB
    time = 6.h
  }

  $variantSelect {
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 2
    memory = 16.GB
    time = 8.h
  }

  $recalSNPs{
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 2
    memory = 16.GB
    time = 8.h
  }

  $recalIndels{
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 2
    memory = 24.GB
    time = 8.h
  }

  $combineVariants{
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 2
    memory = 24.GB
    time = 8.h
  }

  $variantAnnotatesnpEff{
    container = 'shub://qbicsoftware/qbic-singularity-snpeff'
    cpus = 2
    memory = 8.GB
    time = 8.h    
  }

  $variantAnnotatevariantAnnotateGATK{
    container = 'shub://qbicsoftware/qbic-singularity-gatk'
    cpus = 2
    memory = 16.GB
    time = 8.h
    }
}