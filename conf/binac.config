/*
vim: syntax=groovy
-*- mode: groovy;-*-
 * -------------------------------------------------------------
 *  Nextflow config file for use with Singularity on BINAC cluster
 * -------------------------------------------------------------
 * Defines basic usage limits and singularity image id.
 */

singularity {
    enabled = true
}

process {
    beforeScript = 'module load devel/singularity/2.4.1'
    executor = 'pbs'
    module = ['devel/java_jdk/1.8.0u112']
    container = 'docker://scilifelab/ngi-rnaseq'
    queue = 'short'
}

params {
  max_memory = 60.GB
  max_cpus = 20
  max_time = 48.h
}
